                {% endif %}

                {% if is_granted('ROLE_COORDINATOR') %}
                    <li><a href="{{ path('app_coordinator_dashboard') }}">Mes classes</a></li>
                {% endif %}

                <li><a href="{{ path('app_profile') }}">üë§ {{ app.user.firstName }}</a></li>
                <li><a href="{{ path('app_logout') }}">D√©connexion</a></li>
            {% else %}
                <li><a href="{{ path('app_login') }}">Connexion</a></li>
            {% endif %}
        </ul>
    </nav>

    <main class="container">
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">‚úÖ {{ message }}</div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="alert alert-error">‚ùå {{ message }}</div>
        {% endfor %}

        {% for message in app.flashes('warning') %}
            <div class="alert alert-warning">‚ö†Ô∏è {{ message }}</div>
        {% endfor %}

        {% block body %}{% endblock %}
    </main>

    <footer class="footer">
        <p>RoomBooking ‚Äî MediaSchool IRIS Nice ¬© {{ "now"|date("Y") }}</p>
    </footer>

    <script src="{{ asset('js/app.js') }}"></script>
</body>
</html>