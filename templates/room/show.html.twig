{% extends 'base.html.twig' %}

{% block title %}{{ room.name }}{% endblock %}

{% block body %}
    <h1>{{ room.name }}</h1>

    <p>Capacité : {{ room.capacity }} personnes</p>
    <p>Description : {{ room.description ?? 'Aucune description' }}</p>
    <p>Statut : {{ room.isActive ? 'Disponible' : 'Indisponible' }}</p>

    {% if room.equipments|length > 0 %}
        <h2>Équipements</h2>
        <ul>
            {% for equipment in room.equipments %}
                <li>{{ equipment.name }}</li>
            {% endfor %}
        </ul>
    {% endif %}

    <h2>Réservations à venir</h2>
    {% if reservations|length > 0 %}
        <table>
            <thead>
                <tr>
                    <th>Début</th>
                    <th>Fin</th>
                    <th>Réservé par</th>
                </tr>
            </thead>
            <tbody>
                {% for reservation in reservations %}
                    <tr>
                        <td>{{ reservation.startDatetime|date('d/m/Y H:i') }}</td>
                        <td>{{ reservation.endDatetime|date('d/m/Y H:i') }}</td>
                        <td>{{ reservation.owner.firstName }} {{ reservation.owner.lastName }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>Aucune réservation à venir — salle disponible !</p>
    {% endif %}

    <a href="{{ path('app_reservation_new') }}">Réserver cette salle</a>
    <a href="{{ path('app_room_index') }}">Retour à la liste</a>
{% endblock %}